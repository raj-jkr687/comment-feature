<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :name, "Author" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body, "Comment Description" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>